<Page
    x:Class="Excalinest.Views.VideogamesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Excalinest.Core.Models"
    mc:Ignorable="d">

    <StackPanel>
        <StackPanel Margin="50" Orientation="Horizontal">
            <TextBlock
                Width="200"
                FontSize="14"
                Text="Seleccione un tag" />

            <ComboBox
                Width="400"
                DisplayMemberPath="Nombre"
                ItemsSource="{x:Bind ViewModel.Tags}"
                SelectedValuePath="Nombre"
                SelectionChanged="TagComboBox_SelectionChanged" />

        </StackPanel>

        <Grid x:Name="ContentArea">
            <controls:AdaptiveGridView
                animations:Connected.ListItemElementName="itemThumbnail"
                animations:Connected.ListItemKey="animationKeyContentGrid"
                DesiredWidth="270"
                IsItemClickEnabled="True"
                ItemClickCommand="{x:Bind ViewModel.ItemClickCommand}"
                ItemHeight="240"
                ItemsSource="{x:Bind ViewModel.Source, Mode=OneWay}"
                SelectionMode="None"
                StretchContentForSingleRow="False">
                <controls:AdaptiveGridView.ItemTemplate>
                    <DataTemplate x:DataType="models:Videojuego">
                        <Grid x:Name="itemThumbnail" Padding="{StaticResource XSmallLeftTopRightBottomMargin}" >
                            <!--Vista Administrador-->
                            <StackPanel
                                Name="ZonaCheckBoxSeleccion"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <SymbolIcon Symbol="Download" HorizontalAlignment="Left" Grid.Column="0"/>
                                    <CheckBox IsChecked="False" HorizontalAlignment="Left" Grid.Column="1"/>
                                </Grid>
                            </StackPanel>
                            <!--Vista Administrador-->
                            <StackPanel
                                Name="myStackPanel"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <!-- <FontIcon AutomationProperties.Name="{x:Bind Titulo}" FontSize="20" Glyph="{x:Bind Symbol}"  /> -->
                                <TextBlock
                                    Margin="{StaticResource XXSmallTopMargin}"
                                    HorizontalAlignment="Center"
                                    FontSize="20"
                                    Style="{ThemeResource BodyTextStyle}"
                                    Text="{x:Bind Titulo}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </controls:AdaptiveGridView.ItemTemplate>
            </controls:AdaptiveGridView>
        </Grid>
    </StackPanel>
</Page>
